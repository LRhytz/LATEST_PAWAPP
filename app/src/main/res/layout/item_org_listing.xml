<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Pet Photo -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/ivPetPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#F5F5F5"
                android:contentDescription="Pet photo" />

        </androidx.cardview.widget.CardView>

        <!-- Pet Information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- Pet Name -->
            <TextView
                android:id="@+id/tvPetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buddy"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#212121"
                android:layout_marginBottom="4dp" />

            <!-- Pet Details -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvSpecies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dog"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="#E8F5E8"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 years"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- Breed and Size -->
            <TextView
                android:id="@+id/tvBreedSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golden Retriever • Medium"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="6dp" />

            <!-- Location and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="📍 Bacolod City"
                    android:textSize="12sp"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tvTimePosted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:textSize="12sp"
                    android:textColor="#999999" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Menu -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top">

            <ImageButton
                android:id="@+id/btnMoreOptions"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="More options"
                android:layout_marginBottom="4dp" />

            <!-- Status Indicator -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIVE"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:background="#E8F5E8"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

    <!-- Optional: Quick Stats Row -->
    <LinearLayout
        android:id="@+id/llQuickStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvViews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="👁️ 24 views"
            android:textSize="12sp"
            android:textColor="#999999"
            android:gravity="start" />

        <TextView
            android:id="@+id/tvInterested"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="❤️ 3 interested"
            android:textSize="12sp"
            android:textColor="#999999"
            android:gravity="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>