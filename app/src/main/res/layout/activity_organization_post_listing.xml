<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp">

        <!-- Header Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Pet for Adoption"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#2E7D32"
            android:paddingBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E8F5E8"
            android:layout_marginBottom="20dp" />

        <!-- Pet Image Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Photo *"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#424242" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivPetPhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:src="@drawable/ic_add_photo"
                android:contentDescription="Pet photo preview" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnSelectPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Photo"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnTakePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Take Photo"
                    android:backgroundTint="#FF9800" />

            </LinearLayout>
        </LinearLayout>

        <!-- Basic Information Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Information"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Species *"
            android:textStyle="bold"
            android:textColor="#424242" />

        <Spinner
            android:id="@+id/spSpecies"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_background" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pet Name *"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background" />

        <EditText
            android:id="@+id/etBreed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Breed (e.g., Golden Retriever, Mixed)"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background" />

        <!-- Age and Gender Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age *"
                    android:textStyle="bold"
                    android:textColor="#424242" />

                <Spinner
                    android:id="@+id/spAge"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender *"
                    android:textStyle="bold"
                    android:textColor="#424242" />

                <Spinner
                    android:id="@+id/spGender"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background" />

            </LinearLayout>
        </LinearLayout>

        <!-- Size and Weight Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size *"
                    android:textStyle="bold"
                    android:textColor="#424242" />

                <Spinner
                    android:id="@+id/spSize"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight (lbs)"
                    android:textStyle="bold"
                    android:textColor="#424242" />

                <EditText
                    android:id="@+id/etWeight"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@drawable/edittext_background" />

            </LinearLayout>
        </LinearLayout>

        <!-- Health Information Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Information"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <CheckBox
                android:id="@+id/cbSpayedNeutered"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Spayed/Neutered"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cbVaccinated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Up-to-date Vaccines"
                android:textSize="14sp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/cbMicrochipped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Microchipped"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etMedicalNotes"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Medical notes or special needs (optional)"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background" />

        <!-- Temperament Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperament and Behavior"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <CheckBox
                android:id="@+id/cbGoodWithKids"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Good with children"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cbGoodWithDogs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Good with dogs"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <CheckBox
                android:id="@+id/cbGoodWithCats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Good with cats"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cbHouseTrained"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="House trained"
                android:textSize="14sp" />

        </LinearLayout>



        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Pet description and personality *"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background" />

        <!-- Adoption Information Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adoption Information"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />



        <EditText
            android:id="@+id/etContactInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact information *"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location (City, State) *"
            android:inputType="textPostalAddress"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background" />

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btnPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preview Listing"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Pet for Adoption"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="16dp" />

        <!-- Required Fields Note -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Required fields"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>